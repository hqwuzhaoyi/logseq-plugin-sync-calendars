{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "cache": false,
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "build:plugin": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "build:web": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "lint": {},
    "start": {
      "cache": false,
      "persistent": true,
      "env": [
        "NODE_ENV",
        "VITE_ENV",
        "VITE_APP_ENV",
        "VITE_MODE",
        "VITE_LOGSEQ_API_SERVER",
        "VITE_LOGSEQ_API_TOKEN",
        "APPLE_USER_NAME",
        "APPLE_USER_PASSWORD"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "NODE_ENV",
        "VITE_ENV",
        "VITE_APP_ENV",
        "VITE_MODE",
        "VITE_LOGSEQ_API_SERVER",
        "VITE_LOGSEQ_API_TOKEN",
        "APPLE_USER_NAME",
        "APPLE_USER_PASSWORD"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ]
    },
    "release": {
      "env": ["GH_TOKEN"],
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "outputs": [
        "dist/**"
      ]
    }
  }
}